PATCH {{baseUrl}}/api/v1/tracks/{{trackId}}/points?mode=opt
Content-Type: application/geo+json

{
  "type": "Feature",
  "geometry": {
    "type": "Point",
    "coordinates": [
      53.544225,
      10.064383
    ]
