{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Berlin",
  "schedule": [
    "before 7am on Saturday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "automerge": false,
  "reviewersFromCodeOwners": true,
  "ignoreDeps": ["jackson-module-kotlin", "jackson-datatype-jsr310", "jackson-dataformat-xml"],
  "enabled": true
}
